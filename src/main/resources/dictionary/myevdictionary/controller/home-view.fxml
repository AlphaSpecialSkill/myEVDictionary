<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<AnchorPane fx:id="homeViewPane" prefHeight="600.0" prefWidth="820.0" stylesheets="@../stylesheets/home.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.myevdictionary.controller.HomeController">
   <children>
      <HBox fx:id="hboxHome" prefHeight="600.0" prefWidth="820.0">
         <children>
            <VBox fx:id="search" prefHeight="600.0" prefWidth="270.0">
               <children>
                  <AnchorPane prefHeight="58.0" prefWidth="227.0">
                     <children>
                        <TextField fx:id="searchbar" layoutX="58.0" layoutY="7.0" prefHeight="40.0" prefWidth="190.0">
                           <padding>
                              <Insets bottom="15.0" />
                           </padding>
                        </TextField>
                        <Button fx:id="transLangEV" layoutX="14.0" layoutY="7.0" mnemonicParsing="false" onAction="#clickTransBtn" prefHeight="40.0" prefWidth="40.0" styleClass="button-EV" />
                        <Button fx:id="transLangVE" layoutX="14.0" layoutY="7.0" mnemonicParsing="false" onAction="#clickTransBtn" prefHeight="40.0" prefWidth="40.0" styleClass="button-VE" />
                     </children>
                  </AnchorPane>
                  <ListView fx:id="listView" prefHeight="556.0" prefWidth="240.0">
                     <VBox.margin>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="5.0" />
                     </VBox.margin></ListView>
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </VBox>
            <VBox fx:id="content" prefHeight="600.0" prefWidth="550.0">
               <children>
                  <AnchorPane prefHeight="600.0" prefWidth="550.0">
                     <children>
                        <HBox layoutX="14.0" layoutY="14.0" prefHeight="30.0" prefWidth="150.0">
                           <children>
                              <Label fx:id="wordText" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="150.0" text="Nghĩa của từ">
                                 <font>
                                    <Font name="System Bold" size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox layoutX="14.0" layoutY="44.0" prefHeight="30.0" prefWidth="150.0">
                           <children>
                              <Label fx:id="definitionWord" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="150.0">
                                 <font>
                                    <Font name="System Bold" size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <AnchorPane layoutY="85.0" prefHeight="495.0" prefWidth="530.0">
                           <children>
                              <WebView fx:id="definitionView" prefHeight="495.0" prefWidth="530.0" />
                           </children>
                        </AnchorPane>
                        <HBox layoutX="370.0" layoutY="35.0" prefHeight="40.0" prefWidth="160.0">
                           <children>
                              <Button fx:id="pronounce" mnemonicParsing="false" onAction="#clickSpeakerBtn" prefHeight="40.0" prefWidth="40.0" styleClass="button-pronounce" />
                              <Button fx:id="bookmarkButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="button-bookmark" />
                              <Button fx:id="editButton" mnemonicParsing="false" onAction="#clickEditBtn" prefHeight="40.0" prefWidth="40.0" styleClass="button-edit" />
                              <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#clickRemoveBtn" prefHeight="40.0" prefWidth="40.0" styleClass="button-delete" />
                           </children>
                        </HBox>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </AnchorPane>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
